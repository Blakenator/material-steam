{
  "name": "steam-skin",
  "version": "0.5.1",
  "description": "A material Steam client",
  "author": {
    "name": "Blake Stacks",
    "email": "blake@blakestacks.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Blakenator/material-steam.git"
  },
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "npx electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p ng:serve electron:serve",
    "build": "npm run electron:tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "del-cli dist/**/* && ng build --watch",
    "electron:tsc": "tsc main.ts || echo",
    "electron:serve": "nodemon --watch src --watch dist --watch main.ts -e ts,html,scss --exec \"npm run electron:tsc && electron .\"",
    "electron:local": "npm run build:prod && npm run bundle && electron .",
    "electron:linux": "npm run build:prod && npm run bundle && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npm run bundle && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npm run bundle && npx electron-builder build --mac",
    "bundle": "echo hello",
    "test": "ng test",
    "e2e": "ng e2e",
    "release": "npm run electron:windows"
  },
  "dependencies": {
    "browserify": "^16.2.2",
    "electron-log": "^2.2.14",
    "electron-updater": "^2.21.10",
    "nodemon": "^1.17.5",
    "opn": "^5.3.0",
    "pretty-checkbox": "^3.0.3",
    "steam-client": "^2.5.7",
    "steam-user": "^3.27.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.6.8",
    "@angular/cli": "6.0.3",
    "@angular/common": "6.0.3",
    "@angular/compiler": "6.0.3",
    "@angular/compiler-cli": "6.0.3",
    "@angular/core": "6.0.3",
    "@angular/forms": "6.0.3",
    "@angular/http": "6.0.3",
    "@angular/language-service": "6.0.3",
    "@angular/platform-browser": "6.0.3",
    "@angular/platform-browser-dynamic": "6.0.3",
    "@angular/router": "6.0.3",
    "@ngx-translate/core": "10.0.1",
    "@ngx-translate/http-loader": "3.0.1",
    "@types/jasmine": "2.8.7",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "8.9.4",
    "codelyzer": "4.2.1",
    "core-js": "2.5.6",
    "del-cli": "^1.1.0",
    "electron": "2.0.2",
    "electron-builder": "20.15.1",
    "electron-packager": "^12.1.0",
    "electron-reload": "1.2.2",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "2.0.2",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.0",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.1.0",
    "npm-run-all": "4.1.3",
    "npx": "10.2.0",
    "protractor": "5.3.2",
    "rxjs": "6.1.0",
    "ts-node": "6.0.3",
    "tslint": "5.10.0",
    "typescript": "2.7.2",
    "wait-on": "2.1.0",
    "webdriver-manager": "12.0.6",
    "zone.js": "0.8.26"
  }
}
